{
  "name": "homium",
  "version": "1.0.0",
  "description": "An open source smart home system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "tsc",
    "start": "nodemon ./src/index.ts",
    "copy": "rimraf dist && tsc && copyfiles -u 1 src/static/**/* src/**/*.json src/**/*.html src/**/*.css dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VoDACode/Homium.git"
  },
  "keywords": [
    "SmartHome"
  ],
  "author": "VoDACode",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VoDACode/Homium/issues"
  },
  "homepage": "https://github.com/VoDACode/Homium#readme",
  "dependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "mongodb": "^4.13.0",
    "nodemon": "^2.0.20",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
