{
  "name": "homium",
  "version": "1.0.0",
  "description": "An open source smart home system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "tsc",
    "start": "node scripts/start.js",
    "start-backend": "nodemon ./src/index.ts",
    "copy": "rimraf dist && tsc && copyfiles -u 1 src/static/**/* src/**/*.json src/**/*.html src/**/*.css dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VoDACode/Homium.git"
  },
  "keywords": [
    "SmartHome"
  ],
  "author": "VoDACode",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VoDACode/Homium/issues"
  },
  "homepage": "https://github.com/VoDACode/Homium#readme",
  "dependencies": {
    "@types/express": "^4.17.15",
    "@types/express-ws": "^3.0.1",
    "@types/node": "^18.11.18",
    "archiver": "^5.3.1",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "mongodb": "^4.13.0",
    "mqtt": "^4.3.7",
    "node-telegram-bot-api": "^0.61.0",
    "nodemon": "^2.0.20",
    "uuidv4": "^6.2.13",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/node-telegram-bot-api": "^0.57.6",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
